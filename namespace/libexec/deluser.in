PATH=@bindir@:$PATH

if [ ".$1" = ".--help" ]; then
	echo "Delete a user mailbox"
	exit 0
	HASHELP
fi

#Collect some vitals
SERVER=127.0.0.1

BINDDN=`sed -n 's;bind_dn : ;;p' @sysconfdir@/skolab/skolab.conf`
BINDPW=`sed -n 's;bind_pw : ;;p' @sysconfdir@/skolab/skolab.conf`
BASEDN=`sed -n 's;base_dn : ;;p' @sysconfdir@/skolab/skolab.conf`
HOMESERV=`sed -n 's;fqdnhostname : ;;p' @sysconfdir@/skolab/skolab.conf`

DN=`skolab showuser $1 | grep dn`
if test "$DN" = ""; then
echo User not found! 
exit 255
else
	echo $DN
	echo Are you sure you want to delete this user?
	read ANS
	if test "$ANS" != "y"; then
		exit 0
	fi
fi


LDIFFILE="/tmp/cfdeluser.ldif"
trap "rm $LDIFFILE" 0 1 2 3 15

cat <<LDIF > $LDIFFILE
$DN
add: skolabdeleteflag
skolabdeleteflag: $HOMESERV
LDIF

ldapmodify -x -D "$BINDDN" -w $BINDPW -h $SERVER -f $LDIFFILE 

